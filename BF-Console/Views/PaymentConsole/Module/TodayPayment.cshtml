@using System.IO
@using System.Linq.Expressions

@using WebHome.Helper
@using WebHome.Models.Locale
@using WebHome.Models.ViewModel
@using WebHome.Models.DataEntity
@using WebHome.Controllers
@using Newtonsoft.Json
@{
    ModelStateDictionary _modelState;
    ModelSource<UserProfile> models;
    IQueryable<Payment> _model;
    _modelState = (ModelStateDictionary)ViewBag.ModelState;
    models = ((SampleController<UserProfile>)ViewContext.Controller).DataSource;
    _model = (IQueryable<Payment>)this.Model;
}
@{
    IQueryable<Payment> items = _model.Where(p => p.PayoffDate >= DateTime.Today);
}
<div class="col-6">
    <br /><br />
    <p class="text-small">
        收款<br />
        作廢<br />
        折讓
    </p>
</div>
<div class="col-6 text-right">
    <h5 class="m-t-0">本日金額</h5>
    <a href="javascript:showPaymentList();">$@($"{items.Sum(p => p.PayoffAmount):##,###,###,###}")</a><br />
    <a href="javascript:showPaymentList();">$@($"{items.ExtractVoidPayment(models).Sum(p => p.PayoffAmount):##,###,###,###}")</a><br />
    <a href="javascript:showPaymentList();">$@($"{items.ExtractPaymentAllowance(models).Sum(a=>a.TotalAmount):##,###,###,###}")</a><br />
</div>

