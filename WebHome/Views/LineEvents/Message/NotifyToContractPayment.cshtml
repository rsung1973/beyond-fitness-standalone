@using System.IO
@using System.Linq.Expressions
@using System.Web
@using WebHome.Helper
@using WebHome.Models.Locale
@using WebHome.Models.ViewModel
@using WebHome.Models.DataEntity
@using WebHome.Controllers
@using Microsoft.AspNetCore.Mvc.ModelBinding
@using WebHome.Properties
@using Newtonsoft.Json
@{

    ModelStateDictionary _modelState;
    ModelSource<UserProfile> models;
    CourseContract _model;


    _modelState = ViewContext.ModelState;
    models = (ModelSource<UserProfile>)ViewContext.HttpContext.Items["Models"]; ;
    _model = (CourseContract)this.Model;

    //Response.ContentType = "application/json";
}
{
    "to": "@Html.Raw(_model.ServingCoach.UserProfile.UserProfileExtension.LineID)",
    "messages": [
        {
            "type": "flex",
            "altText": "您有一張合約等待收款",
            "contents": {
                "type": "bubble",
                "header": {
                    "type": "box",
                    "layout": "vertical",
                    "contents": [
                    {
                        "type": "image",
                        "url": "https://test.beyond-fitness.com.tw/WebHome/ConsoleHome/images/line/title/CoachToPayment.png",
                        "offsetTop": "0px",
                        "offsetBottom": "0px",
                        "margin": "none",
                        "align": "center",
                        "gravity": "top",
                        "aspectRatio": "20:11",
                        "size": "xl"
                    },
                    {
                        "type": "box",
                        "layout": "vertical",
                        "margin": "none",
                        "spacing": "xs",
                        "contents": [
                        {
                            "type": "box",
                            "layout": "baseline",
                            "spacing": "none",
                            "contents": [
                            {
                                "type": "text",
                                "text": "合約名稱",
                                "color": "#AEAEAE",
                                "flex": 3,
                                "align": "start",
                                "wrap": true,
                                "size": "md"
                            },
                            {
                                "type": "text",
                                "text": "@Html.Raw(_model.CourseContractType.TypeName)",
                                "wrap": true,
                                "color": "#656565",
                                "size": "md",
                                "flex": 7,
                                "align": "start"
                            }
                            ],
                            "paddingAll": "xs"
                        },
                        {
                            "type": "box",
                            "layout": "baseline",
                            "spacing": "sm",
                            "contents": [
                            {
                                "type": "text",
                                "text": "學生姓名",
                                "color": "#AEAEAE",
                                "size": "md",
                                "flex": 3,
                                "align": "start",
                                "wrap": true
                            },
                            {
                                "type": "text",
                                "text": "@Html.Raw(_model.ContractLearnerName())",
                                "wrap": true,
                                "color": "#656565",
                                "size": "md",
                                "flex": 7,
                                "align": "start"
                            }
                            ],
                            "paddingAll": "xs"
                        },
                        {
                            "type": "box",
                            "layout": "baseline",
                            "spacing": "sm",
                            "contents": [
                            {
                                "type": "text",
                                "text": "購買總數",
                                "color": "#AEAEAE",
                                "size": "md",
                                "flex": 3,
                                "align": "start",
                                "wrap": true
                            },
                            {
                                "type": "text",
                                "text": "@Html.Raw(_model.TotalLessonCount(models))",
                                "wrap": true,
                                "color": "#656565",
                                "size": "md",
                                "flex": 7,
                                "align": "start"
                            }
                            ],
                            "paddingAll": "xs"
                        },
                        {
                            "type": "box",
                            "layout": "baseline",
                            "spacing": "sm",
                            "contents": [
                            {
                                "type": "text",
                                "text": "分期期數",
                                "color": "#AEAEAE",
                                "size": "md",
                                "flex": 3,
                                "align": "start",
                                "wrap": true
                            },
                            {
                                "type": "text",
                                "text": "@Html.Raw(_model.ContractInstallment?.Installments.ToString() ?? "不分期")",
                                "wrap": true,
                                "color": "#656565",
                                "size": "md",
                                "flex": 7,
                                "align": "start"
                            }
                            ],
                            "paddingAll": "xs"
                        }
                        @if (_model.InstallmentID.HasValue)
                        {
                            <text>
                            ,
                            {
                                "type": "box",
                                "layout": "baseline",
                                "spacing": "sm",
                                "contents": [
                                {
                                    "type": "text",
                                    "text": "首期款項",
                                    "color": "#AEAEAE",
                                    "size": "md",
                                    "flex": 3,
                                    "align": "start",
                                    "wrap": true
                                },
                                {
                                    "type": "text",
                                    "text": "@Html.Raw($"TWD ${_model.TotalCost:##,###,###,###}")",
                                    "wrap": true,
                                    "color": "#656565",
                                    "size": "md",
                                    "flex": 7,
                                    "align": "start"
                                }
                                ],
                                "paddingAll": "xs"
                            }
                        </text>
                        }
                        ],
                        "paddingAll": "none"
                    }
                    ],
                    "spacing": "none",
                    "margin": "none",
                    "paddingTop": "none"
                },
                "body": {
                    "type": "box",
                    "layout": "vertical",
                    "contents": [
                    {
                        "type": "image",
                        "url": "https://test.beyond-fitness.com.tw/WebHome/ConsoleHome/images/line/pay/payment.png",
                        "size": "40%"
                    }
                    ],
                    "spacing": "none",
                    "margin": "none",
                    "paddingAll": "none"
                },
                "footer": {
                    "type": "box",
                    "layout": "vertical",
                    "contents": [
                    {
                        "type": "separator"
                    },
                    {
                        "type": "button",
                        "style": "link",
                        "height": "sm",
                        "action": {
                        "type": "uri",
                        "label": "立即收款",
                        "uri": "@Html.Raw($"{WebHome.WebApp.Properties["HostDomain"]}{VirtualPathUtility.ToAbsolute("~/Account/ToEditPaymentForContract")}?KeyID={HttpUtility.UrlEncode(_model.ContractID.EncryptKey())}&encUID={HttpUtility.UrlEncode(_model.FitnessConsultant.EncryptKey())}")"
                        },
                        "margin": "0px",
                        "gravity": "center",
                        "offsetTop": "5px",
                        "offsetBottom": "none",
                        "color": "#282828"
                    },
                    {
                        "type": "box",
                        "layout": "vertical",
                        "contents": [],
                        "margin": "sm"
                    }
                    ],
                    "flex": 0
                }
        }
    ]
}