    <script type="text/javascript" src="../scripts/custom.js"></script>

    <script type="text/javascript">

        //家庭聯絡簿

        $(".knob").knob();

        $({

            animatedVal: 0

        }).animate({

            animatedVal: 86

        }, {

            duration: 3800,

            easing: "swing",

            step: function () {

                $(".knob").val(Math.ceil(this.animatedVal)).trigger("change");

            }

        });

    </script>
