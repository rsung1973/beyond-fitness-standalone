                           <li class="nav-item">
                              <a class="nav-link text-color-grey" href="#termcondition"
                                 data-bs-toggle="tab">@Html.Raw(commonAll.Terms)</a>
                           </li>
                        </ul>
                     </div>
                     <div class="tabs tabs-bottom tabs-center tabs-simple hidden-sm-up">
                        <ul class="nav nav-tabs">
                           <li class="nav-item">
                              <a class="nav-link active text-color-grey" href="#privacyPolicy"
                                 data-bs-toggle="tab">@Html.Raw(commonAll.PrivacyPolicy)</a>
                           </li>
                           <li class="nav-item">
                              <a class="nav-link text-color-grey" href="#cookiePolicy"
                                 data-bs-toggle="tab">@Html.Raw(commonAll.CookiePolicy)</a>
                           </li>
                           <li class="nav-item">
                              <a class="nav-link text-color-grey" href="#termcondition"
                                 data-bs-toggle="tab">@Html.Raw(commonAll.Terms)</a>
                           </li>
                        </ul>
                     </div>
                  </div>
                  <div class="col-sm-12 col-md-8 col-lg-8 ps-5">
                     <div class="tab-pane tab-pane-navigation active" id="privacyPolicy">
                        @Html.Raw(commonAll.PrivacyPolicyContent)
                     </div>
                     <div class="tab-pane tab-pane-navigation" id="cookiePolicy">
                        @Html.Raw(commonAll.CookiePolicyContent)
                     </div>
                     <div class="tab-pane tab-pane-navigation" id="termcondition">
                        @Html.Raw(commonAll.TermsContent)
