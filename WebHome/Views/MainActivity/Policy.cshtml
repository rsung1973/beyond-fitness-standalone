            <div class="col">
               <div class="row">
                  <div class="col-sm-12 col-md-4 col-lg-4">
                     <div class="tabs tabs-vertical tabs-right tabs-navigation tabs-navigation-simple hidden-sm-down">
                        <ul class="nav nav-tabs col-sm-3">
                           <li class="nav-item">
                              <a class="nav-link active text-color-grey" href="#privacyPolicy"
                                 data-bs-toggle="tab">@Html.Raw(commonAll.PrivacyPolicy)</a>
                           </li>
                           <li class="nav-item">
                              <a class="nav-link text-color-grey" href="#cookiePolicy"
                                 data-bs-toggle="tab">@Html.Raw(commonAll.CookiePolicy)</a>
