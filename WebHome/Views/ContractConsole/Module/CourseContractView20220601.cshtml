    <div class="col-md-12">
        <table class="table" style="margin-bottom: 0px; padding: 0px; font-weight: 700;">
            @if (_viewModel.Pdf != "1" && _model.CourseContractExtension.SignOnline == true)
            {
                <tr>
                    <td colspan="2">
                        <label class="fancy-checkbox  custom-bgcolor-green">
